@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Sekme Başlığı</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
    <body>
        <h1>Login</h1>
        <form asp-controller="Account" asp-action="Login" method="post" role="form">
            <div class="form-group">
                <input type="text" class="form-control" id="btnTcNo" placeholder="Tc No" asp-for="TC">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="btnPass" placeholder="Password" asp-for="Password">
            </div>
            <button type="submit" class="btn btn-primary" id="btnLogin">Giriş Yap</button>
        </form>

    </body>
</html>








