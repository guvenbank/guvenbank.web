@model HomePageModel
@{
    ViewData["Title"] = "hoşgeldiniz sayfanıza";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>GUVENBANK</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/material-dashboard.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="~/images/sidebar-1.jpg">
            <!--
            Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

            Tip 2: you can also add an image using data-image tag
        -->
            <div class="logo">
                <a href="#" class="simple-text logo-normal">
                    GÜVENBANK
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item active  ">
                        <a class="nav-link" href="./dashboard.html">
                            <i class="material-icons">dashboard</i>
                            <p>ANASAYFA</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="./user.html">
                            <i class="material-icons">person</i>
                            <p>BİLGİLERİM</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="./tables.html">
                            <i class="material-icons">content_paste</i>
                            <p>TRANSFERLER</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="./typography.html">
                            <i class="material-icons">library_books</i>
                            <p>YÜKLEMELER</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <div class="navbar-wrapper">HOŞ GELDİNİZ, @Model.UserModel.FullName</div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">

                        <ul class="navbar-nav">

                            <li class="nav-item dropdown">
                                <a class="nav-link" href="#pablo" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">person</i>
                                    <p class="d-lg-none d-md-block">
                                        Account
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                                    <a class="dropdown-item" href="#">ANASAYFA</a>
                                    <a class="dropdown-item" href="#">AYARLAR</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">ÇIKIŞ</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">

                    <div class="alert" role="alert" id="message" style="visibility: hidden;">  </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">VARLIKLARIM</h4>
                                </div>

                                <button type="button" class="btn btn-primary ml-5 mr-5 mt-3 mt-3" id="btnHesapOlustur"> YENI HESAP OLUSTUR </button>
                                <div class="card-body table-responsive">
                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                        <th>ID</th>
                                        <th>BAKIYE</th>
                                        <th>PARA YATIRMA</th>
                                        <th>HESAP ISLEMI</th>
                                        </thead>

                                        <tbody>
                                            @foreach (BankAccountModel account in Model.BankAccountsModel.BankAccounts)
                                            {
                                                <tr>
                                                    <td>@Model.UserModel.CustomerNo-@account.No</td>
                                                    <td>@account.Balance ₺</td>
                                                    <td><button type="button" class="btn btn-primary btnBakiyeArttir" data-toggle="modal" data-target="#popupBakiye" value="@account.No">PARA YATIRMA</button> </td>
                                                    <td><button type="button" class="btn btn-primary btnHesapKapat" data-toggle="modal" data-target="#popupHesapSil" value="@account.No">HESABI KAPAT</button> </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Popup Para Yatır -->
                        <div class="modal fade" id="popupBakiye" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">HESABA PARA YATIRMA</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" id="popupVal" />
                                        <input type="text" id="popupBalance" onkeypress="return isNumberKey(event)" /> ₺
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">İPTAL</button>
                                        <button type="button" class="btn btn-primary" id="btnOkParaYatir">PARA YATIR</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Popup Hesap Sil -->
                        <div class="modal fade" id="popupHesapSil" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">HESABI SİLME</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <label>Hesabınız kalıcı olarak silinecektir. Kalıcı olarak silmek istiyor musunuz ? </label>
                                        <input type="hidden" id="popupHesapSilVal" />
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeModal">İPTAL</button>
                                        <button type="button" class="btn btn-primary" id="btnOkHesapSil">EVET</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-header card-header-warning">
                                    <h4 class="card-title">SON İŞLEMLERİM</h4>

                                </div>
                                <div class="card-body table-responsive">
                                    <table class="table table-hover">
                                        <thead class="text-warning">
                                        <th>GELEN HESAP NO</th>
                                        <th>GIDEN / GELEN</th>
                                        <th>TARIH</th>
                                        <th>TUTAR</th>
                                        <th>AÇIKLAMA</th>
                                        </thead>

                                        <tbody>
                                            @foreach (TransactionModel transaction in Model.TransactionsModel.transactions)
                                            {

                                                <tr>
                                                    <td>@transaction.receiverBankAccountNo</td>
                                                    @if (transaction.receiverFullName == Model.UserModel.FullName)
                                                    {
                                                        <td>
                                                            GELEN
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            GİDEN
                                                        </td>
                                                    }
                                                    <td>@transaction.date</td>
                                                    <td>@transaction.amount ₺</td>
                                                    <td>@transaction.summary</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/material-dashboard.js"></script>
</body>
</html>

<script>
    $('#btnHesapOlustur').click(function () {

        $.ajax({
            url: '/BankAccount/Open',
            type: "POST",
            success: function () {
                document.location.reload();  
                $( document ).ready(function() {
                //$('#message').text("Hesap başarıyla oluşturuldu.");
                //$('#message').addClass("alert-success");
                //$('#message').css("visibility", "visible");       
                //$('#message').fadeOut(6000);
                });
            },
            error: function (res) {

                if (res.responseJSON.status == "failed")
                {
                    $('#message').text(res.responseJSON.message);
                    $('#message').css("visibility", "visible");
                    $('#message').addClass("alert-danger");
                    $('#closeModal').click();
                    $('#message').fadeOut(6000);
                }
                else {
                    $('#message').text("Bir sorun oluştu.");
                    $('#message').css("visibility", "visible");
                    $('#message').addClass("alert-danger");
                    $('#closeModal').click();
                    $('#message').fadeOut(6000);
                }
            }
        });
    });

    $('.btnBakiyeArttir').click(function () {

        var btnVal = $(this).val();
        $('#popupVal').val(btnVal);  
    });

     $('#btnOkParaYatir').click(function () {

          var myData = {
                No: $('#popupVal').val(),
                Amount: $('#popupBalance').val()
            }

        $.ajax({
            url: '/BankAccount/Deposit',
            type: 'POST',
            data: myData,
            success: function () {
                //$('#closeModal').click();
                 document.location.reload();
                //$( document ).ready(function() {
                //$('#message').text("Hesap başarıyla oluşturuldu.");
                //$('#message').css("visibility", "visible");
                //$('#message').addClass("alert-success");
                
                //$('#message').fadeOut(6000);
                //});
            },
           error: function (res) {

                if (res.responseJSON.status == "failed")
                {
                    $('#message').text(res.responseJSON.message);
                    $('#message').css("visibility", "visible");
                    $('#message').addClass("alert-danger");
                    $('#closeModal').click();
                    $('#message').fadeOut(6000);
                }
                else {
                    $('#message').text("Bir sorun oluştu.");
                    $('#message').css("visibility", "visible");
                    $('#message').addClass("alert-danger");
                    $('#closeModal').click();
                    $('#message').fadeOut(6000);
                }
            }
        });
    });

    $('.btnHesapKapat').click(function () {

        var btnVal = $(this).val();
        $('#popupHesapSilVal').val(btnVal);  
    });

    $('#btnOkHesapSil').click(function () {

          var myData = {
                No: $('#popupHesapSilVal').val()
            }

        $.ajax({
            url: '/BankAccount/Delete',
            type: 'DELETE',
            data: myData,
            success: function () {
                $('#closeModal').click();
                document.location.reload();
                //$( document ).ready(function() {
                //$('#message').text("Hesap başarıyla silindi.");
                //$('#message').css("visibility", "visible");
                //$('#message').addClass("alert-success");
                
                //$('#message').fadeOut(6000);
                //});

            },
            error: function (res) {

                if (res.responseJSON.status == "failed")
                {
                    $('#message').text(res.responseJSON.message);
                    $('#message').css("visibility", "visible");
                    $('#message').addClass("alert-danger");
                    $('#closeModal').click();
                    $('#message').fadeOut(6000);
                }
                else {
                    $('#message').text("Bir sorun oluştu.");
                    $('#message').css("visibility", "visible");
                    $('#message').addClass("alert-danger");
                    $('#closeModal').click();
                    $('#message').fadeOut(6000);
                }
            }
        });
    });


    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
       
        if (charCode > 31 && (charCode < 48 || charCode > 57))
                return false;
            return true;
        }
</script>